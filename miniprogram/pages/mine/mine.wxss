page{
  background-color: #f3f7fa;
}
.view-root{
  height: 100vh;
  position: relative;
}
.header {
  height: 260rpx;
  background-size: cover;
  box-sizing: border-box;
  position: relative;
}
.header_bj{
  width: 100%;
  height: 100%;
}
/*   用户信息开始  */
.info {
  width: 85%;
  padding: 45rpx 30rpx;
  background-color: white;
  font-size: 0;
  border-radius: 20rpx;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
  position: absolute;
  bottom: -80rpx;
  left: 7.5%;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.info image {
  width: 95rpx;
  height: 95rpx;
  margin-right: 20rpx;
  display: inline-block;
  border-radius: 50%;
}
.info .info_name {
  padding-top: 7rpx;
  font-size: 36rpx;
  color: rgba(26,27,57,1);
}
.info_name_title{
  font-size: 24rpx;
  padding-left: 6rpx;
}

.info_inner{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding-top: 45rpx;
}
.info_inner_list{
  width: 33%;
  height: 25rpx;
  color: #363636;
  font-size: 23rpx;
  text-align: center;
  display: flex;
  align-content: center;
  justify-content: center;
  flex-wrap: wrap;
}
.info_inner_list view{
  width: 100%;
}
.info_inner_list:nth-child(2){
  border-left: 1rpx solid #e1e1e1;
  border-right: 1rpx solid #e1e1e1;
}
/*   用户信息结束  */
/*   list开始   */
.list {
  width: 100%;
}
.list_content{
  width: 100%;
  padding: 30rpx 55rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 5rpx;
  color: #1A1B39;
  font-size: 35rpx;
  font-weight: initial;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: none;
  line-height: normal;
}
.list_content::after{
  border: none;
}
.list_content:first-child{
  padding-top: 120rpx;
}
.icon_arrow{
  width: 15rpx;
  height: 25rpx;
}
.bottom{
  width: 100%;
  height: 10rpx;
  background-color: #fff;
  position: absolute;
  left: 0;
  bottom: 0;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
}