.pages{background: #CCCC66}
.face{height: 500rpx;
      overflow: hidden;
      display:flex;
      justify-content:center;
      align-items:center;
      }
.face image{width: 500rpx; height: 500rpx;}      

/* 识别展示 */
.result{background: white; padding: 40rpx 25rpx 30rpx 25rpx;
        display: flex; justify-content: space-between;}
.result-text{font-size: 35rpx; color:black;}
.friends{background: #ffdf3d;
        border-radius: 6rpx;
        padding: 3rpx 8rpx;}


/* 结果 */
/* 可信度 */
.botany{display: flex; justify-content: space-between; font-size: 28rpx; color:black;
        padding: 30rpx 25rpx;}
.botany view{width: 33.3%;} 
.botany view:nth-child(2){text-align: center;}
.botany view:nth-child(3){display: flex; justify-content: flex-end;}       
.botany-attr:nth-child(2n){background: #f5f5f5;}
.botany-attr{padding: 30rpx 25rpx;}
.botany-attr{color: #479AC7}
.botany-view{margin-bottom: 70px;}

/* 选择图片 */
.btn{position: fixed; bottom: 10rpx; width: 100%;}
.btn button{width: 550rpx; height: 80rpx; line-height: 80rpx; font-size: 30rpx;
 border-radius: 70rpx; background: linear-gradient(#6699CC, #ffa640);}




/* 动画 */
.animation{position: fixed;
          top: 0;
          left: 0;
          right: 0;
          height: 500rpx;
          overflow:hidden;}
.animation-list{width: 100%;
                height: 500rpx;
                background: linear-gradient(to bottom, rgba(216,179,255,0),rgba(216,179,255,1));
                position: relative;
                top: -600rpx;
                animation: myfist 2s linear 1s infinite alternate;
                }    

  /*开始执行动画  */
  @keyframes myfist
  {
    0%{background: linear-gradient(to bottom, rgba(216,179,255,0),rgba(216,179,255,1));
        left: 0; top: -600rpx;}
    25%{left: 0; top: 50rpx;}
    50%{left: 0; top: 50rpx;}
    75%{left: 0; top:50rpx;}
    100%{left: 0; top: -600rpx;}    
  }

  /* 没有识别到花 */
  .nobotany{text-align: center; font-size: 35rpx; color:black; margin-top: 40rpx;}