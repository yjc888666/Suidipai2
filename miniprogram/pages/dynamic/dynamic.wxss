page{
  background-color: #f3f7fa;
}
.dynamic_box{
  width: 100%;
  min-height: 100vh;
  position: relative;
  box-sizing: border-box;
}
.content{
  width: 100%;
  padding: 0 30rpx 20rpx;
  box-sizing: border-box;
}
.left,.right{
  display: inline-block;
  width: 49%;
  font-size: 0;
}
.right{
  float: right;
}
.content_list{
  display: inline-block;
  width: 100%;
  background-color: white;
  border-radius: 15rpx;
  overflow: hidden;
  margin-top: 20rpx;
}
.list_img{
  width: 100%;
}
.list_inner{
  padding: 20rpx;
}
.inner_title{
  font-size: 25rpx;
  color: #1a1b3c;
}
.comment_box{
  padding: 25rpx 0;
  display: flex;
  align-items: center;
}
.comment_like_box{
  display: flex;
  align-items: center;
}
.comment_like_box:last-child{
  padding-left: 20rpx;
}
.comment_like_box:last-child .like_img{
  width: 30rpx;
  height: 31rpx;
}
.like_img{
  width: 30rpx;
  height: 25rpx;
}
.like_num{
  color: #929292;
  font-size: 22rpx;
  padding-left: 8rpx;
}
.user_info{
  display: flex;
  align-items: center;
}
.user_header_img{
  width: 65rpx;
  height: 65rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.user_info_list{
  font-size: 22rpx;
  color: #1a1b3c;
}
.user_info_date{
  font-size: 18rpx;
  color: #969696;
}
.add{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: #14b95e85;
  position: fixed;
  right: 20rpx;
  bottom: 80rpx;
  z-index: 99999;
  font-size: 90rpx;
  color: #fff;
  text-align: center;
}
.bottom{
  width: 100%;
  height: 10rpx;
  background-color: #fff;
  position: absolute;
  left: 0;
  bottom: 0;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
}